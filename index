# Устанавливаем ОС Ubuntu Server
# Поссле установки устанавливаем сл. программы
  sudo apt-get install xorg
  sudo apt-get install i3
  sudo apt-get install chromium-browser
  sudo apt-get install mc
  sudo apt-get install libreoffice
  sudo apt-get install nautilus
  sudo apt-get install evince
  sudo apt-get install xtightvncviewer
  sudo apt-get install vlc
  sudo apt-get install smbclient
  sudo apt-get install nmap
  sudo apt-get install git
  sudo apt-get install atom
  sudo apt-get install gparted
  sudo apt-get install gimp
  sudo apt-get install htop
  sudo apt-get install remmina
  sudo apt-get install avidemux
  sudo apt-get install transmageddon
  
# Запуск x-server осуществляется командой startx

# В конфигурационный файл i3 (.config/i3/config) дописываем
 # lock screen
 bindsym $mod+Control+1 exec i3lock
 exec setxkbmap "us,ru" ",winkeys" "grp:alt_shift_toggl
 exec xrandr --output VGA1  --mode 1920x1080 --pos 0x0 --output HDMI1 --mode 1920x1080 --pos 1920x0
